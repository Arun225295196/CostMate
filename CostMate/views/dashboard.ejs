<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Smart Financial Tracker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="blue darken-3">
        <div class="nav-wrapper container">
            <a href="#" class="brand-logo">Financial Tracker</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/expenses">Expenses</a></li>
                <li><a href="/budgets">Budgets</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h4 class="center-align">Welcome, <%= user.name %>!</h4>
        
        <div class="row">
            <!-- Monthly Overview Card -->
            <div class="col s12 m6 l4">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Monthly Overview</span>
                        <h5>$<span id="monthlyTotal">0</span></h5>
                        <p>Total Expenses This Month</p>
                    </div>
                </div>
            </div>

            <!-- Budget Status Card -->
            <div class="col s12 m6 l4">
                <div class="card teal darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Budget Status</span>
                        <h5><span id="budgetPercentage">0</span>%</h5>
                        <p>Budget Used</p>
                    </div>
                </div>
            </div>

            <!-- AI Tips Card -->
            <div class="col s12 m6 l4">
                <div class="card purple darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">AI Tip</span>
                        <p id="aiTip">Loading tip...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row">
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Expense Categories</span>
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
            
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Monthly Trend</span>
                        <canvas id="trendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Transactions -->
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Recent Transactions</span>
                        <table class="striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody id="recentTransactions">
                                <!-- Transactions will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Expense FAB -->
    <div class="fixed-action-btn">
        <a class="btn-floating btn-large red" href="/expenses/add">
            <i class="large material-icons">add</i>
        </a>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>