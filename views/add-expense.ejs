<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <main class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col s12 m8 offset-m2 animate-in">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title center-align" style="color: var(--primary-color); margin-bottom: 30px;">
                            <i class="material-icons" style="vertical-align: middle;">add_shopping_cart</i>
                            Add New Expense
                        </h4>
                        
                        <form action="/expenses/add" method="POST" id="expenseForm">
                            <div class="row">
                                <div class="input-field col s12 m6">
                                    <i class="material-icons prefix">category</i>
                                    <select name="category" id="category" required>
                                        <option value="" disabled selected>Choose category</option>
                                        <option value="Food" data-icon="restaurant">üçî Food</option>
                                        <option value="Transport" data-icon="directions_car">üöó Transport</option>
                                        <option value="Entertainment" data-icon="movie">üé¨ Entertainment</option>
                                        <option value="Bills" data-icon="receipt">üìÑ Bills</option>
                                        <option value="Shopping" data-icon="shopping_bag">üõçÔ∏è Shopping</option>
                                        <option value="Health" data-icon="favorite">‚ù§Ô∏è Health</option>
                                        <option value="Education" data-icon="school">üìö Education</option>
                                        <option value="Other" data-icon="more_horiz">üì¶ Other</option>
                                    </select>
                                    <label>Category *</label>
                                </div>
                                
                                <div class="input-field col s12 m6">
                                    <i class="material-icons prefix">attach_money</i>
                                    <input type="number" name="amount" id="amount" step="0.01" min="0.01" required class="validate">
                                    <label for="amount">Amount *</label>
                                    <span class="helper-text" data-error="Please enter a valid amount">Enter expense amount</span>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">description</i>
                                    <input type="text" name="description" id="description" maxlength="200" required class="validate">
                                    <label for="description">Description *</label>
                                    <span class="helper-text" data-error="Description is required">What did you spend on?</span>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="input-field col s12 m6">
                                    <i class="material-icons prefix">date_range</i>
                                    <input type="text" class="datepicker" name="date" id="date" value="<%= new Date().toISOString().split('T')[0] %>">
                                    <label for="date">Date</label>
                                </div>
                                
                                <div class="input-field col s12 m6">
                                    <i class="material-icons prefix">payment</i>
                                    <select name="paymentMethod" id="paymentMethod">
                                        <option value="Cash" selected>üíµ Cash</option>
                                        <option value="Credit Card">üí≥ Credit Card</option>
                                        <option value="Debit Card">üí≥ Debit Card</option>
                                        <option value="Bank Transfer">üè¶ Bank Transfer</option>
                                        <option value="Digital Wallet">üì± Digital Wallet</option>
                                        <option value="Other">üìù Other</option>
                                    </select>
                                    <label>Payment Method</label>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col s6">
                                    <a href="/expenses" class="btn grey lighten-1 waves-effect waves-light full-width" style="border-radius: 50px;">
                                        <i class="material-icons left">cancel</i>Cancel
                                    </a>
                                </div>
                                <div class="col s6">
                                    <button type="submit" class="btn btn-gradient waves-effect waves-light full-width">
                                        <i class="material-icons left">save</i>Save Expense
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Quick Tips Card -->
                <div class="card" style="background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);">
                    <div class="card-content">
                        <h6 style="color: #333;"><i class="material-icons tiny">info</i> Quick Tip</h6>
                        <p style="color: #333; font-size: 0.9rem;">Track every expense, no matter how small. Small purchases add up quickly!</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Materialize components
            M.FormSelect.init(document.querySelectorAll('select'));
            
            // Initialize datepicker with today's date
            const datepicker = M.Datepicker.init(document.querySelectorAll('.datepicker'), {
                format: 'yyyy-mm-dd',
                defaultDate: new Date(),
                setDefaultDate: true,
                autoClose: true
            });
            
            // Form validation
            document.getElementById('expenseForm').addEventListener('submit', function(e) {
                const amount = document.getElementById('amount').value;
                const description = document.getElementById('description').value;
                const category = document.getElementById('category').value;
                
                if (!category) {
                    e.preventDefault();
                    M.toast({html: '‚ö†Ô∏è Please select a category', classes: 'rounded red'});
                    return false;
                }
                
                if (amount <= 0) {
                    e.preventDefault();
                    M.toast({html: '‚ö†Ô∏è Amount must be greater than 0', classes: 'rounded red'});
                    return false;
                }
                
                if (description.trim().length < 3) {
                    e.preventDefault();
                    M.toast({html: '‚ö†Ô∏è Description must be at least 3 characters', classes: 'rounded red'});
                    return false;
                }
                
                // Show loading
                M.toast({html: 'üíæ Saving expense...', classes: 'rounded'});
            });
            
            // Real-time amount formatting
            document.getElementById('amount').addEventListener('input', function(e) {
                if (e.target.value < 0) {
                    e.target.value = 0;
                }
            });
        });
    </script>
</body>
</html>