    <script>
        document.addEventListener('DOMContentLoaded', function() {
            M.AutoInit();
            loadDashboardData();
        });

        async function loadDashboardData() {
            try {
                await Promise.all([
                    loadAITip(),
                    loadRecentTransactions(),
                    loadQuickStats()
                ]);
            } catch (error) {
                console.error('Error loading dashboard data:', error);
            }
        }

        async function loadAITip() {
            try {
                const response = await fetch('/api/ai/tip');
                const data = await response.json();
                document.getElementById('aiTip').textContent = data.tip;
            } catch (error) {
                document.getElementById('aiTip').textContent = 'Start tracking your expenses to get personalized financial tips!';
            }
        }

        async function loadRecentTransactions() {
            try {
                const response = await fetch('/api/dashboard/overview');
                const data = await response.json();
                
                document.getElementById('monthlyTotal').textContent = data.monthlyTotal.toFixed(2);
                
                const container = document.getElementById('recentTransactionsList');
                
                if (data.recentTransactions && data.recentTransactions.length > 0) {
                    container.innerHTML = '';
                    data.recentTransactions.forEach(transaction => {
                        const item = document.createElement('div');
                        item.className = 'transaction-item';
                        item.innerHTML = `
                            <div class="transaction-left">
                                <div class="transaction-icon">
                                    <i class="material-icons">receipt</i>
                                </div>
                                <div class="transaction-details">
                                    <div class="transaction-desc">${transaction.description}</div>
                                    <div class="transaction-meta">${transaction.category} â€¢ ${new Date(transaction.date).toLocaleDateString()}</div>
                                </div>
                            </div>
                            <div class="transaction-amount">-$${transaction.amount.toFixed(2)}</div>
                        `;
                        container.appendChild(item);
                    });
                } else {
                    container.innerHTML = `
                        <div class="empty-state">
                            <i class="material-icons">receipt</i>
                            <h5>No transactions yet</h5>
                            <p>Start tracking your expenses to see them here</p>
                            <a href="/expenses/add" class="btn-modern">Add First Expense</a>
                        </div>
                    `;
                }
            } catch (error) {
                const container = document.getElementById('recentTransactionsList');
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="material-icons">error</i>
                        <h5>Unable to load transactions</h5>
                        <p>Please try refreshing the page</p>
                    </div>
                `;
            }
        }

        async function loadQuickStats() {
            try {
                const response = await fetch('/api/dashboard/category-data');
                const data = await response.json();
                
                const container = document.getElementById('quickStats');
                document.getElementById('totalCategories').textContent = data.totalCategories || 0;
                
                if (data.labels && data.labels.length > 0) {
                    let statsHtml = '';
                    data.labels.forEach((label, index) => {
                        const percentage = data.values.length > 0 ? 
                            ((data.values[index] / data.values.reduce((a, b) => a + b, 0)) * 100).toFixed(1) : 0;
                        
                        statsHtml += `
                            <div style="margin-bottom: 1.5rem;">
                                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
                                    <span style="font-weight: 500; color: #f8fafc;">${label}</span>
                                    <span style="color: #ef4444; font-weight: 600;">$${data.values[index].toFixed(2)}</span>
                                </div>
                                <div style="background: rgba(51, 65, 85, 0.3); border-radius: 4px; height: 6px; overflow: hidden;">
                                    <div style="background: linear-gradient(90deg, #6366f1, #8b5cf6); height: 100%; width: ${percentage}%; transition: width 0.3s ease;"></div>
                                </div>
                                <div style="font-size: 0.8rem; color: #94a3b8; margin-top: 0.25rem;">${percentage}% of total</div>
                            </div>
                        `;
                    });
                    container.innerHTML = statsHtml;
                } else {
                    container.innerHTML = `
                        <div class="empty-state">
