<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <main class="container">
        <h4>My Budgets</h4>
        
        <%- include('partials/messages') %>
        
        <div class="row">
            <div class="col s12">
                <a href="/budgets/add" class="btn blue waves-effect waves-light">
                    <i class="material-icons left">add</i>Set New Budget
                </a>
            </div>
        </div>
        
        <div class="row">
            <% if (typeof budgets !== 'undefined' && budgets.length > 0) { %>
                <% budgets.forEach(budget => { %>
                    <div class="col s12 m6">
                        <div class="card budget-progress">
                            <div class="card-content">
                                <span class="card-title"><%= budget.category %></span>
                                <p>Budget: $<%= budget.amount.toFixed(2) %> (<%= budget.period %>)</p>
                                <p>Spent: $<%= budget.spent.toFixed(2) %></p>
                                
                                <div class="progress" style="margin-top: 15px;">
                                    <div class="determinate <%= 
                                        budget.percentage >= 90 ? 'red' : 
                                        budget.percentage >= 70 ? 'orange' : 'green' %>" 
                                        style="width: '<%= Math.min(budget.percentage, 100) %>%';"></div>
                                </div>
                                
                                <p class="<%= budget.percentage >= 90 ? 'red-text' : '' %>">
                                    <%= budget.percentage %>% used
                                </p>
                                
                                <div style="margin-top: 15px;">
                                    <form action="/budgets/<%= budget._id %>?_method=DELETE" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-small red" onclick="return confirm('Delete this budget?')">
                                            <i class="material-icons">delete</i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col s12">
                    <div class="card-panel">
                        <p class="center-align">No budgets set. Create your first budget to start tracking!</p>
                    </div>
                </div>
            <% } %>
        </div>
    </main>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
